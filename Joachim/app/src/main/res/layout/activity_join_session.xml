    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/WHITE"
        android:layout_marginTop="2dp"
        >
        <RelativeLayout
             android:id="@+id/joinrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_rounded"
            android:layout_marginTop="2dp"
            >
           <ImageView
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:src="@drawable/remotecourt"
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Case Title : "
                android:id="@+id/ct"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@string/times"
                android:layout_marginLeft="2dp"
                android:textSize="20dp"
                android:textFontWeight="300"
                android:layout_below="@id/logo"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="@color/GOLD"
                ></TextView>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:layout_toEndOf="@id/ct"
                android:layout_toRightOf="@id/ct"
                android:textSize="12pt"
                android:layout_marginTop="10dp"
                android:textColor="@color/BLACK"
                android:layout_marginLeft="5dp"
                android:id="@+id/title"
                ></TextView>-->
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ct"
                android:fontFamily="@string/times"
                android:layout_marginTop="25dp"
                android:hint="Enter Fullname"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corners2"
                android:id="@+id/fullname"
                android:padding="12dp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullname"
                android:layout_marginTop="25dp"
                android:hint="Enter Session ID"
                android:fontFamily="@string/times"
                android:padding="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corners2"
                android:id="@+id/session_id"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/session_id"
                android:layout_marginTop="25dp"
                android:fontFamily="@string/times"
                android:hint="Enter Session Pass"
                android:padding="12dp"
                android:background="@drawable/rounded_corners2"
                android:layout_centerHorizontal="true"
                android:id="@+id/password"
                />

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/password"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="JOIN SESSION"
                android:textColor="@color/WHITE"
                android:background="@drawable/rounded_corners4"
                android:id="@+id/btnjoin"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/WHITE"
                android:id="@+id/pb"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>



