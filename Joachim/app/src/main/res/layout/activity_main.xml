<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/relay"
    android:textAlignment="center"
    tools:context=".MainActivity"
    tools:targetApi="11"
    android:background="@color/BLACK"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="REMOTE COURT SCHEDULING APP"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/GOLD"
        android:textSize="20dp"
        android:fontFamily="@string/georgia"
    />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="315dp"
        android:layout_height="594dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/remotecourt"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="@color/papayawhip"
        android:text="Cause List"
        android:textColor="@color/BLACK"
        android:onClick="causeList"
        android:layout_centerHorizontal="true"
        android:id="@+id/causelistbtn"
        android:visibility="gone"
        />
        <!--android:layout_marginLeft="80dp"-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="@color/papayawhip"
        android:text="Login"
        android:textColor="@color/RED"
        android:layout_marginLeft="180dp"
        android:onClick="login"
        android:id="@+id/login"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:layout_marginTop="430dp"
        android:text=""
        android:textColor="@color/WHITE"
        android:id="@+id/version"
        android:fontFamily="@string/georgia"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="@string/copyright"
        android:textColor="@color/GOLD"
        android:visibility="gone"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Get Latest Version"
        android:textColor="@color/BLACK"
        android:visibility="gone"
        android:id="@+id/dwn"
        android:padding="10dp"
        android:background="@drawable/rounded_corners2"
        android:fontFamily="@string/georgia"
        />

</RelativeLayout>